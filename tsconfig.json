{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "types",
		"outDir": "./dist",
		"sourceMap": true,
		"watch": false,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es5",
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017"
		],
		"strict": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}